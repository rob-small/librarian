# Library Management System - Environment Configuration
# Copy this file to .env and fill in your values
# This file should NOT be committed to git (already in .gitignore)

# ============================================================================
# LLM Configuration
# ============================================================================

# LLM API Endpoint URL
# For Local LM Studio (Docker):
#   LLM_API_URL=http://host.docker.internal:1234/v1/chat/completions
# For Local LM Studio (Local Development):
#   LLM_API_URL=http://127.0.0.1:1234/v1/chat/completions
# For OpenAI:
#   LLM_API_URL=https://api.openai.com/v1/chat/completions
# For Anthropic (via compatible proxy):
#   LLM_API_URL=https://api.anthropic.com/v1/messages
LLM_API_URL=http://host.docker.internal:1234/v1/chat/completions

# LLM Model Name (optional, auto-detected if not provided)
# For OpenAI: gpt-4, gpt-3.5-turbo, etc.
# For Local LM Studio: local-model, mistral, neural-chat, etc.
# For Anthropic: claude-3-opus, claude-3-sonnet, etc.
LLM_MODEL_NAME=local-model

# ============================================================================
# Python Configuration
# ============================================================================

# Python path for imports
PYTHONPATH=/app

# Python unbuffered output (for Docker logging)
PYTHONUNBUFFERED=1

# ============================================================================
# Gradio Configuration
# ============================================================================

# Gradio server name (0.0.0.0 for Docker, 127.0.0.1 for local)
GRADIO_SERVER_NAME=0.0.0.0

# Gradio server port
GRADIO_SERVER_PORT=7860

# ============================================================================
# Docker Configuration
# ============================================================================

# Docker container restart policy
# Options: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped

# ============================================================================
# Application Configuration
# ============================================================================

# Application environment
# Options: development, production, testing
APP_ENV=development

# Enable debug logging
DEBUG=false

# ============================================================================
# Database Configuration (for future use)
# ============================================================================

# Database type
# Options: sqlite, postgresql, mysql
# DB_TYPE=sqlite

# Database URL
# For SQLite: sqlite:///./library.db
# For PostgreSQL: postgresql://user:password@localhost/librarian
# DB_URL=sqlite:///./library.db

# ============================================================================
# Security Configuration (for future use)
# ============================================================================

# Secret key for sessions (should be a random string in production)
# SECRET_KEY=your-secret-key-change-in-production

# JWT expiration time (in seconds)
# JWT_EXPIRATION=3600

# ============================================================================
# Logging Configuration (for future use)
# ============================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
# LOG_FILE=/var/log/librarian/app.log

# ============================================================================
# Email Configuration (for future use with notifications)
# ============================================================================

# SMTP server
# SMTP_SERVER=smtp.gmail.com

# SMTP port
# SMTP_PORT=587

# SMTP username
# SMTP_USERNAME=your-email@gmail.com

# SMTP password
# SMTP_PASSWORD=your-app-password

# Email for notifications
# NOTIFICATION_EMAIL=admin@example.com

# ============================================================================
# Performance Configuration
# ============================================================================

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# Chat history limit (number of messages to keep)
CHAT_HISTORY_LIMIT=100

# ============================================================================
# Feature Flags (for future use)
# ============================================================================

# Enable MCP tools
ENABLE_MCP_TOOLS=true

# Enable chat feature
ENABLE_CHAT=true

# Enable overdue notifications
ENABLE_OVERDUE_NOTIFICATIONS=false

# Enable API endpoints (for future REST API)
ENABLE_API=false
